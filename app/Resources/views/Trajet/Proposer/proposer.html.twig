{% extends ':Trajet:layout.html.twig' %}

{% block title %} Proposer-{{ parent() }} {% endblock %}

{% block body %}
    <div class="modal fade sc-car-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <form name="formaddcar" action="{{ path('api-car-add') }}" method="post" class="formaddcar" id="formaddcar">
                    <div class="form-group">
                        <label for="marque">Marque</label>
                        <select data-api-urlcars="{{ path("api-car-all") }}" class="form-control marque" name="marque" id="marque">
                            <option value="" selected="selected">Choisissez</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="modele">Modele</label>
                        <select class="form-control modele" name="modele" id="modele">
                            <option value="" selected="selected">Choisissez</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="confort">Confort</label>
                        <select class="form-control" name="confort" id="confort">
                            <option value="BASIC" selected="selected">Basique</option>
                            <option value="NORMAL">Normal</option>
                            <option value="COMFORT">Confort</option>
                            <option value="LUXE">Luxe</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nbrplaces">nbrPlaces</label>
                        <select class="form-control" name="nbrplaces" id="nbrplaces">
                            <option value="1" selected="selected">1</option>
                            <option value="2" >2</option>
                            <option value="3" >3</option>
                            <option value="4" >4</option>
                            <option value="5" >5</option>
                            <option value="6" >6</option>
                            <option value="7" >7</option>
                            <option value="8" >8</option>
                            <option value="9" >9</option>
                        </select>
                        <small>(incluant le conducteur)</small>
                    </div>

                    <div class="form-group">
                        <label for="color">Couleur</label>
                        <select data-api-url-colors="{{ path('api-car-colors') }}" class="form-control color" name="color" id="color">
                            <option value="" selected="selected">Choisissez</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="immatriculation">Immatriculation</label>
                        <input type="text" class="form-control matricule" name="immatriculation" id="immatriculation"/>
                    </div>

                    <button type="submit"  class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        $(function() {
            //$('.menu-links a').removeClass('active');
            $('#idProposer').addClass('active');
        });
    </script>
    <script src="{{ asset('js/proposer.js') }}"></script>
    <script src="{{ asset('js/waypoints.js') }}"></script>
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBk9B9hwksRr8Sr0LGF-uj0GtDZlKCw1r4&libraries=places">
    </script>
    <script src="{{ asset('js/map.js') }}"></script>
    <script src="{{ asset('js/autoComplete.js') }}"></script>





{% endblock %}